<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="namenotfoundunica.houseworkcalendar">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".SchermataIniziale"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GestioneGruppo"
            android:label="@string/title_activity_gestione_gruppo" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.AppCompat" />
        <activity
            android:name=".GestionePagamenti"
            android:label="@string/title_activity_pagamenti" />
        <activity
            android:name=".GestioneSondaggi"
            android:label="@string/title_activity_sondaggi" />
        <activity
            android:name=".AggiuntaEvento"
            android:label="@string/title_activity_aggiunta_evento" />
        <activity
            android:name=".SettimanaTipo"
            android:label="@string/title_activity_settimana_tipo" />
        <activity android:name=".AggiuntaSondaggio" />
        <activity android:name=".VisualizzaSondaggio" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
    </application>

</manifest>